<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.chicksevent.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.chicksevent.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    <fragment
        android:id="@+id/EventDetailFragment"
        android:name="com.example.chicksevent.EventDetailFragment"
        android:label="Event">
        <argument android:name="eventId" app:argType="string" />
        <deepLink app:uri="chicks://event/{eventId}" />
    </fragment>

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.chicksevent.FirstFragment"
        android:label="First Fragment">

        <action
            android:id="@+id/action_FirstFragment_to_CreateEventFragment"
            app:destination="@id/createEventFragment" />
    </fragment>

    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.example.chicksevent.CreateEventFragment"
        android:label="Create Event" />



</navigation>