<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_notification_item"
    android:padding="8dp">

    <!-- Event image on top -->

    <!-- Date box -->

    <!-- Notification info -->
    <ImageView
        android:id="@+id/img_event"
        android:layout_width="397dp"
        android:layout_height="168dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_image"
        app:layout_constraintBottom_toTopOf="@+id/info_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Arrow button -->

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="52dp"
        android:layout_height="43dp"
        android:background="@drawable/bg_date_box"
        android:gravity="center"
        android:text="OCT\n30"
        android:textColor="@color/darkPurple"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_event"
        app:layout_constraintVertical_bias="0.958"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:paddingStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_arrow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/tv_date">

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halloween Party"
            android:textColor="@color/purpleText"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="12dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:00 PM - 9:00 PM"
            android:textColor="@color/purpleText"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958"
        app:tint="@color/purpleText" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_big_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/darkRed" />


</androidx.constraintlayout.widget.ConstraintLayout>