<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:padding="16dp">

    <!-- Profile Content -->
    <LinearLayout
        android:id="@+id/profile_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_above="@id/bottom_buttons_layout">

        <!-- Title -->

        <!-- Top Buttons -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/michroma"
            android:text="Profile"
            android:textColor="@color/purpleText"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User"
                android:backgroundTint="@color/purpleText"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_facility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Facility"
                android:backgroundTint="#555555"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Avatar -->
        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            app:tint="@color/purpleText" />

        <!-- Name -->
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Phone -->
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone Number"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Notifications -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/purpleText"
                android:trackTint="@color/white"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <!-- Save & Delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_save_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:textColor="#000000"
                android:backgroundTint="@color/purpleText"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_delete_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete Account"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF4444"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Fixed Buttons -->
    <LinearLayout
        android:id="@+id/bottom_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_notification"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_notification"
            android:drawableTint="@color/purpleText"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Notifications" />

        <Button
            android:id="@+id/btn_events"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_events"
            android:drawableTint="@color/purpleText"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Events" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_scan"
            android:drawableTint="@color/purpleText"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Scan" />

        <Button
            android:id="@+id/btn_addEvent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_addevents"
            android:drawableTint="@color/purpleText"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Add Event" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_profile"
            android:drawableTint="@color/purpleText"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Profile" />
    </LinearLayout>

</RelativeLayout>
