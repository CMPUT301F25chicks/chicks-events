<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment_org.UpdateEventFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="16dp">

        <!-- Header -->

        <!-- Event box container -->

        <!-- Bottom button bar -->



        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/michroma"
            android:text="Update Event Detail"
            android:textColor="@color/purpleText"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.745"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/event_box_scroll"
            android:layout_width="379dp"
            android:layout_height="491dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/btn_save_event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_box"
                android:layout_width="381dp"
                android:layout_height="477dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_notification_item"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.687"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_title">


                <ImageButton
                    android:id="@+id/img_event"
                    android:layout_width="397dp"
                    android:layout_height="168dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_event_name"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Event Name:"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_event" />

                <EditText
                    android:id="@+id/event_name"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@null"
                    android:hint="Event Name"
                    android:text="Halloween Party"
                    android:textColor="@color/purpleText"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

                <TextView
                    android:id="@+id/event_time"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Event Time :"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_name" />

                <LinearLayout
                    android:id="@+id/time"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_time">

                    <EditText
                        android:id="@+id/tv_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOADING..."
                        android:textColor="@color/purpleText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_dash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text=" - "
                        android:textColor="@color/purpleText"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tv_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOADING..."
                        android:textColor="@color/purpleText"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/eventPeriod"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Event Period:"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time" />

                <LinearLayout
                    android:id="@+id/period"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventPeriod">

                    <EditText
                        android:id="@+id/tv_startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOADING..."
                        android:textColor="@color/dateBox"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_dash1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text=" - "
                        android:textColor="@color/dateBox"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tv_endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOADING..."
                        android:textColor="@color/dateBox"
                        android:textSize="14sp" />

                </LinearLayout>



                <TextView
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Registration Period *:"
                    android:id="@+id/reg_period"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/period"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/reg_date_container"
                    app:layout_constraintTop_toBottomOf="@+id/reg_period"
                    android:layout_marginBottom="12dp">

                    <!-- Start Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_date_box"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/start_date_container">

                        <EditText
                            android:id="@+id/et_start_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:hint="Start Date"
                            android:textColorHint="@color/darkPurple"
                            android:focusable="true"
                            android:background="@null" />

                        <ImageView
                            android:id="@+id/icon_start_date"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_events"
                            app:tint="@color/darkPurple"
                            android:padding="4dp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <!-- End Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_date_box"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/end_date_container">

                        <EditText
                            android:id="@+id/et_end_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="End Date"
                            android:textColorHint="@color/darkPurple"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="@null" />

                        <ImageView
                            android:id="@+id/icon_end_date"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_events"
                            android:padding="4dp"
                            app:tint="@color/darkPurple" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/limit_waiting_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/reg_date_container">

                    <CheckBox
                        android:id="@+id/cb_limit_waiting_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Limit number of waiting list entrants"
                        android:textColor="@color/purpleText" />

                    <EditText
                        android:id="@+id/et_max_entrants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter max number"
                        android:inputType="number"
                        android:textColorHint="@color/purpleText"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Description:"
                    android:textColor="@color/purpleText"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.058"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/limit_waiting_list" />

                <EditText
                    android:id="@+id/tv_event_details"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@null"
                    android:hint="Event Detail: "
                    android:lineSpacingExtra="4dp"
                    android:text="Join us for a spooky Halloween party with games, food, and prizes!"
                    android:textColor="@color/dateBox"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.382"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintVertical_bias="0.0" />

                <!-- Geolocation Requirement Toggle -->
                <LinearLayout
                    android:id="@+id/switch_geo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_event_details"
                    tools:layout_editor_absoluteX="33dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Require Geolocation for Entrants"
                        android:textColor="@color/purpleText"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/switch_geo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:showText="false"
                        android:switchMinWidth="55dp"
                        android:thumbTint="@color/purpleText"
                        android:trackTint="@color/dateBox" />
                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <Button
            android:id="@+id/btn_save_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/purpleText"
            android:text="Save Changes"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/bottom_buttons_layoute"
            tools:layout_editor_absoluteX="16dp" />

        <LinearLayout
            android:id="@+id/bottom_buttons_layoute"
            android:layout_width="375dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
