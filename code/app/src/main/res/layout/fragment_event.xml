<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventFragment"
    android:background="#000000">

    <!-- Header -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/michroma"
        android:text="My Events"
        android:textColor="@color/purpleText"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Button row -->
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_search_events"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="0dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/purpleText"
            android:text="Search Events"
            android:textColor="@color/darkPurple"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_joined_events"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="0dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="@color/purpleText"
            android:text="Joined Events"
            android:textColor="@color/darkPurple"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_hosted_events"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="0dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/purpleText"
            android:text="Hosted Events"
            android:textColor="@color/darkPurple"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Scrollable ListView -->
    <ListView
        android:id="@+id/recycler_notifications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_event"
        app:layout_constraintTop_toBottomOf="@id/button_row"
        app:layout_constraintBottom_toTopOf="@id/bottom_buttons_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom navigation bar -->
    <LinearLayout
        android:id="@+id/bottom_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_notification"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_notification"
            android:drawablePadding="6dp"
            android:drawableTint="@color/purpleText"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_events"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_events"
            android:drawablePadding="6dp"
            android:drawableTint="@color/purpleText"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_scan"
            android:drawablePadding="6dp"
            android:drawableTint="@color/purpleText"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_addEvent"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_addevents"
            android:drawablePadding="6dp"
            android:drawableTint="@color/purpleText"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_profile"
            android:drawablePadding="6dp"
            android:drawableTint="@color/purpleText"
            android:padding="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>